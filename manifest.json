{
  "id": "plugin-naveego-legacy",
  "displayName": "Naveego Legacy Publisher",
  "description": "Publisher which pulls data from a Naveego's Legacy Golden Record service",
  "apiVersion": "2",
  "versionDescription": "Version 2",
  "version": "1.0.1",
  "iconFile": "icon.jpg",
  "executable": "Plugin-Naveego-Legacy",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": false,
  "canUseOAuth": false,
  "canWrite": false,
  "tenants": [
    "pennenergy2",
    "vandelay"
  ],
  "configSchema": {
    "ui": {
      "ui:order": [
        "OAuthClientID",
        "OAuthClientSecret",
        "Username",
        "Password"
      ],
      "Password": {
        "ui:widget": "password"
      },
      "OAuthClientSecret": {
        "ui:widget": "password"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "OAuthClientID" : {
          "type": "string",
          "title": "OAuthClientID",
          "description": "The oauth client id to use for authentication"
        },
        "OAuthClientSecret": {
          "type": "string",
          "title": "OAuthClientSecret",
          "description": "The oauth client secret to use for authentication"
        },
        "Username": {
          "type": "string",
          "title": "Username",
          "description": "The username to use for authentication"
        },
        "Password": {
          "type": "string",
          "title": "Password",
          "description": "The password to use for authentication"
        }
      },
      "required": [
        "OAuthClientID",
        "OAuthClientSecret",
        "Username",
        "Password"
      ]
    }
  }
}